@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    
    @if (Model.Exception.Message.Contains("401"))
    {
        <h1 class="error">Error.</h1>
        <h2 class="error">You do not have access to the ressource</h2>
    }
    else if (Model.Exception.Message.Contains("404"))
    {
        <h1 class="error">Error.</h1>
        <h2 class="error">The searched item is not found</h2>
    }
    else
    {
        <h1 class="error">Error.</h1>
        <h2 class="error">An error occurred while processing your request.</h2>
    }


  
</hgroup>
